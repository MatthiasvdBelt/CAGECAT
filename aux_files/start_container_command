# if we want to recreate the container. Make sure that:
 # 1. cwd has Dockerfile
 # 2. cwd process_logs folder with maintenance folder in it
 # 3. cwd has supervisord.conf file
 # 4. cwd has get_databases.py file
 # 5. cwd has empty pfam_db folder

docker rm cagecat_service && \
rm -rf repo && git clone git@git.wur.nl:belt017/thesis_repo.git && \
mv thesis_repo/ repo && \
python get_databases.py /lustre/BIF/nobackup/belt017/databases && \
docker build -t cagecat . && \
docker run --name cagecat_service -p 5001:88 --ip 172.17.0.14 --mount source=cagecat_storage,target=/repo/cagecat -v /lustre/BIF/nobackup/belt017/databases:/hmm_databases -d cagecat


# if we want to run the container
docker run --name cagecat_service --ip 172.17.0.14 --mount source=cagecat_storage,target=/repo/cagecat -v /lustre/BIF/nobackup/belt017/databases:/hmm_databases cagecat